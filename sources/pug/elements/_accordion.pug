//- Bootstrap Accordion
	@param {object}  obj           - accordion object
	@param {boolean} obj.show      - is accordion not collapsed
	@param {string}  obj.parentId  - parent accordion id
	@param {string}  obj.title     - accordion title

mixin accordion-item( obj )
	-
		var
				headId = obj.parentId + '-accordion-head-' + randomStr(8),
				bodyId = obj.parentId + '-accordion-body-' + randomStr(8);

	//Bootstrap accordion
	article.accordion-item.accordion-custom&attributes( attributes )
		.accordion-header(id= headId )
			.accordion-title
				button.accordion-button(class=  obj.show ? '' : 'collapsed', type= 'button', data-bs-toggle='collapse', data-bs-target= '#' + bodyId,  aria-controls= bodyId, aria-expanded= Boolean(obj.show).toString() )
					= obj.title
					span.accordion-arrow

		.accordion-collapse.collapse(class=  obj.show ? 'show' : '',  id= bodyId, aria-labelledby= headId, data-bs-parent='#' + obj.parentId )
			.accordion-body
				block