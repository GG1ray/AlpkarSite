	include ../sections/_section-header-default

	//- Page Content
	+page-title(pageName)

	//- Typography
	section.section.section-md.bg-default
		.container
			.row.row-30.row-md-40
				.col-12
					h1 Heading 1
					+text-placeholder

				.col-12
					h2 Heading 2
					+text-placeholder

				.col-12
					h3 Heading 3
					+text-placeholder

				.col-12
					h4 Heading 4
					+text-placeholder

				.col-12
					h5 Heading 5
					+text-placeholder

				.col-12
					h6 Heading 6
					+text-placeholder


	//- Blockquote
	section.section.section-md.bg-default
		.container
			h3 Blockquote
			+quote-default('I am very happy Iâ€™ve purchased Starbis template from your company. It really helps my business!')


