extends  ../_skeleton

block variables
	- pageName = 'Maintenance'

block page
	//- Page Header
	include ../sections/_section-header-default

	//- Page Content
	+page-title(pageName)

	//- We are currently working on.
	section.section.section-md.bg-default
		.container.text-center
			h3 We are currently working on.
			p.h5.text-silver This page will appear in
			.block-centered
				//- Countdown
				.countdown.countdown-default(data-type='until', data-time='26 June 2024 16:00', data-format='dhms')

			.offset-top-6
				h5 Stay tuned and subscribe to our newsletter
				//- RD Mailform
				.block-centered.offset-top-7(style='max-width: 370px;')
					form.rd-mailform.form-modern(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
						.form-wrap
							label.form-label(for="contact-email") Email
							input#contact-email.form-input(type="email" name="email" data-constraints="@Email @Required")
						button(type="submit").btn.btn-primary.btn-block Subscribe


	//- Page Footer
	include ../sections/_section-footer-default